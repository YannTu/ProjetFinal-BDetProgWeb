@model ProjetFinal_6223399.ViewModels.PersonnagesAvecImages

<a asp-action="Index" asp-controller="SerieTV">Retour à l'index</a>
<br>
<br>

<h2>Liste des personnages avec une image</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personnages.First().Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnages.First().Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnages.First().Statut)
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Personnages.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Personnages[i].Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Personnages[i].Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Personnages[i].Statut)
                </td>
                <td>
                    <img alt="@(Model.Personnages[i].Prenom)" src="@(Model.Images[i])" style="height:300px" />
                </td>
            </tr>
        }
    </tbody>
</table>